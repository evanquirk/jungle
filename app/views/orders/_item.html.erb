<% if product = Product.find_by(id: product_id) %>
  <div class="item">
    <header>
      <%= image_tag product.image.thumb, alt: product.name %>
      <h4><%= product.name %></h4>
    </header>

    <p class="description">
     <%= product.description %>
    </p>
    <footer>
      Quantity: <%= quantity %>
      Price: <%= humanized_money_with_symbol line_total %>
    </footer>
  </div>
<% end %>

